[Unit]
# 服务描述
Description=crontab worker
# 要求依赖网络
Requires=network-online.target
# 在网络初始化之后启动
After=network-online.target

[Service]
# 服务类型
Type=simple
# 运行时用户与用户组
User=www
Group=www
# 进程退出立即重启
Restart=always
# 启动命令
ExecStart=/usr/local/go_crontab/worker/bin/worker -config /usr/local/go_crontab/worker/bin/worker.json
# 进程工作目录
WorkingDirectory=/usr/local/go_crontab/worker/bin

[Install]
# 在系统启动后,加载我们的unit
WantedBy=multi-user.target